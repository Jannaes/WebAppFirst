<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> @*lisätty, jotta pudotusvalikko toimii*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">  @*lisätty nämä linkit, jotta pudotusvalikko toimii*@
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">

</head>
<body>

    @{
        if (Session["UserName"] == null)
        {
            Html.RenderPartial("_NavbarLoggedOut"); //siirretty koodi _NavbarLoggedOut-näkymään
        }
        else
        {
            Html.RenderPartial("_NavbarLoggedIn");  //siirretty koodi _NavbarLoggedIn-näkymään
        }
    }


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Northwind demo app</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")  // pudotusvalikko ei jostain syystä toimi tämän kanssa*@
    @RenderSection("scripts", required: false)
</body>
</html>


