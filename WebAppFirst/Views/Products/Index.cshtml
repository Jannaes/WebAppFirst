@model IEnumerable<WebAppFirst.Models.Products>
@{
    ViewBag.Title = "Index";
}
@section scripts {
    <script type="text/javascript">
        $(function () {
            $(".showProductId").click(function () {
                var productId = $(this).data("productid"); @*data-productID="@prod.ProductID"*@
                alert(productId);
            });
        });

        @*$(function () {
            $("#poistaTuote").click(function () {  //id:nä määritelty ei toimi kuin ensimmäisessä tuotteessa
                var productId = $(this).data("productid");  
                    alert(productId);
            });
        });*@

        $(".poistaTuote").click(function () {
            var productId = $(this).data("productid");
            alert(productId);
        });

    </script>
}

<h2>Index</h2>
<h4>Tuotteita @Model.Count() kappaletta </h4>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Tuote ID</th>
            <th>Tuotteen nimi</th>
            <th>A-hinta</th>
            <th>Varastomäärä</th>
            <th>Tilaatu määrä</th>
            <th>Kuvalinkki</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WebAppFirst.Models.Products prod in Model)
        {
        <tr>
            <td class="showProductId" data-productid="@prod.ProductID">@prod.ProductID</td>
            <td>@prod.ProductID</td>
            <td>@prod.ProductName</td>
            <td>@prod.UnitPrice</td>
            <td>@prod.UnitsInStock</td>
            <td>@prod.UnitsOnOrder</td>
            <td>@prod.ImageLink</td>
            <td><button class="btn btn-success" onclick='naytaValittuTuote("@prod.ProductName")'>Muokkaa</button></td>
            <td><button class="btn btn-primary showProductId" data-productid="@prod.ProductID">Muokkaa</button></td>
            @*'<td><button class="btn btn-danger" data-productid="@prod.ProductID" id="poistaTuote">Poista</button></td>  //tämä toimii vain ensimmäisessä tuotteessa, koska määritelty id:nä*@
            <td><button class="btn btn-danger poistaTuote" data-productid="@prod.ProductID">Poista</button></td>
        </tr>
        }

    </tbody>
</table>
<script>
    function naytaValittuTuote(tuoteID) {
        alert(tuoteID);
    }
</script>

